{
  "name": "eclosion-desktop",
  "version": "1.1.0",
  "description": "Eclosion for Monarch - Desktop Application",
  "main": "dist/main/index.js",
  "homepage": "https://eclosion.app",
  "author": {
    "name": "Grayson Adams",
    "email": "grayson@eclosion.app"
  },
  "maintainers": [
    {
      "name": "312.dev",
      "email": "ope@312.dev",
      "url": "https://312.dev"
    }
  ],
  "license": "MIT",
  "scripts": {
    "dev": "npm run build:main && electron .",
    "dev:watch": "node scripts/build-main.js --watch",
    "build:main": "node scripts/build-main.js",
    "build:frontend": "cd ../frontend && VITE_DESKTOP_BUILD=true npm run build",
    "build:backend": "node scripts/build-backend.js",
    "build:icons": "node scripts/generate-icons.js",
    "build:all": "npm run build:frontend && npm run build:backend && npm run build:main",
    "pack": "npm run build:all && electron-builder --dir",
    "dist": "npm run build:all && electron-builder",
    "dist:mac": "npm run build:all && electron-builder --mac --universal",
    "dist:mac:arm64": "npm run build:all && electron-builder --mac --arm64",
    "dist:mac:x64": "npm run build:all && electron-builder --mac --x64",
    "dist:win": "npm run build:all && electron-builder --win",
    "dist:linux": "npm run build:all && electron-builder --linux",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@sentry/electron": "^5.11.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "get-port": "^5.1.1"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@playwright/test": "^1.49.1",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "electron": "^38.7.2",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.27.2",
    "eslint": "^9.17.0",
    "png-to-ico": "^2.1.8",
    "sharp": "^0.33.5",
    "typescript": "~5.7.3",
    "vitest": "^2.1.8"
  },
  "overrides": {
    "esbuild": "^0.27.2"
  }
}
